{{component
  this.chartName
  data=@data
  isIcon=(or @isIcon false)
  hover=(perform this.handleHover)
  click=(perform this.handleClick)
  leave=(perform this.handleLeave)
  isClickable=this.isClickable
}}

{{#if this.tooltipTarget}}
  {{yield
    (hash
      tooltip=(component "simple-chart-tooltip"
        target=this.tooltipTarget
        title=null
      )
    )
  }}
{{/if}}
