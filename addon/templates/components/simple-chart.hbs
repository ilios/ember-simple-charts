{{component
  chartName
  data=data
  isIcon=isIcon
  hover=(perform handleHover)
  click=(perform handleClick)
  leave=(perform handleLeave)
  isClickable=isClickable
}}

{{#if tooltipTarget}}
  {{yield
    (hash
      tooltip=(component "simple-chart-tooltip"
        target=tooltipTarget
        title=null
      )
    )
  }}
{{/if}}
