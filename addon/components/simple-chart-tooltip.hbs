{{#in-element this.applicationElement insertBefore=null}}
  {{#if @isClickable}}
    <div
      class="simple-chart-tooltip"
      role="button"
      {{on "click" @onClick}}
      {{did-insert this.setup}}
    >
      <div class="content">
        {{#if @title}}
          <div class="title">
            {{@title}}
          </div>
        {{/if}}
        <div class="body">
          {{yield}}
        </div>
      </div>
    </div>
  {{else}}
    <div class="simple-chart-tooltip" {{did-insert this.setup}}>
      <div class="content">
        {{#if @title}}
          <div class="title">
            {{@title}}
          </div>
        {{/if}}
        <div class="body">
          {{yield}}
        </div>
      </div>
    </div>
  {{/if}}
{{/in-element}}
