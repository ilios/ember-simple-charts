<svg
  xmlns="http://www.w3.org/2000/svg"
  class="simple-chart-bar {{if this.loading "loading" "loaded"}}"
  height={{@containerHeight}}
  role="{{if @isClickable "button"}}"
  width={{@containerWidth}}
  {{on "click" (if @isClickable @onClick (noop))}}
  ...attributes
  {{did-update this.draw @containerHeight @containerWidth @data}}
  {{did-insert this.draw @containerHeight @containerWidth @data}}
></svg>
