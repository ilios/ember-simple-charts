<header class="header">
  <h1>Ember Simple Charts</h1>
  <p>Some simple charts you can use in your email app.</p>
</header>

<div class='ember-simple-charts-wrapper'>
  <div class="panel">
    <h4>{{#link-to 'chart-donut'}}Donut{{/link-to}}</h4>
    {{simple-chart height=250 width=250 name='donut' data=chartData.donut}}
  </div>
  <div class="panel">
    {{simple-chart name='pie' data=chartData.pie}}
  </div>
  <div class="panel">
    {{simple-chart name='bar' data=chartData.bar}}
  </div>
  <div class="panel">
    {{simple-chart name='horz-bar' data=chartData.horz}}
  </div>
  <div class="panel">
    {{simple-chart name='line' data=chartData.line}}
  </div>
  <div class="panel">
    {{simple-chart name='stacked-bar' data=chartData.stacked}}
  </div>
  <div class="panel">
    {{simple-chart name='legend' data=chartData.legend}}
  </div>
</div>

<footer class="footer"></footer>
