<header class="header">
  <h1>Ember Simple Charts</h1>
  <h2>Bar Chart</h2>
</header>

<div class='detail-chart'>
  <div class='icon-example example'>
    {{simple-chart isIcon=true name='bar' data=chartData.bar}}
  </div>

  <div class='medium-example example'>
    {{simple-chart name='bar' data=chartData.bar}}
  </div>

  <div class='large-example example'>
    {{#simple-chart name='bar' data=chartData.bar hover=(action (mut data)) as |chart|}}
      {{#if data}}
        {{#chart.tooltip title=(concat data.label ' (' data.data ')')}}
          {{chartData.ipsum}}
        {{/chart.tooltip}}
      {{/if}}
    {{/simple-chart}}
  </div>
</div>

<footer class="footer"></footer>
