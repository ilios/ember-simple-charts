{{! template-lint-disable no-bare-strings }}
<header class="header">
  <h1>
    Ember Simple Charts
  </h1>
  <h2>
    Horizontal Bar Chart
  </h2>
</header>
<div class="detail-chart">
  <DocsDemo as |demo|>
    <h3>
      As an Icon
    </h3>
    {{#demo.example name="horz-bar-icon.hbs"}}
      <div class="icon-example example">
        <SimpleChart
          @isIcon={{true}}
          @name="horz-bar"
          @data={{this.chartData.horz}}
        />
      </div>
    {{/demo.example}}
    <demo.snippet @name="horz-bar-icon.hbs" @label="Template" />
    <demo.snippet @name="icon.css" @label="CSS" />
    <demo.snippet @name="chart-data.js" @label="Data Service" />
  </DocsDemo>
  <DocsDemo as |demo|>
    <h3>
      Responsive to container size
    </h3>
    {{#demo.example name="horz-bar-responsive.hbs"}}
      <div class="medium-example example">
        <SimpleChart @name="horz-bar" @data={{this.chartData.horz}} />
      </div>
    {{/demo.example}}
    <demo.snippet @name="horz-bar-responsive.hbs" @label="Template" />
    <demo.snippet @name="medium.css" @label="CSS" />
    <demo.snippet @name="chart-data.js" @label="Data Service" />
  </DocsDemo>
  <DocsDemo as |demo|>
    <h3>
      With Tooltips
    </h3>
    {{#demo.example name="horz-bar-tooltips.hbs"}}
      <div class="large-example example">
        <SimpleChart
          @name="horz-bar"
          @data={{this.chartData.horz}}
          @hover={{action (mut this.tooltipData)}}
          @leave={{action (mut this.tooltipData) null}} as |chart|
        >
          {{#if this.tooltipData}}
            <chart.tooltip
              @title={{concat
                this.tooltipData.label
                " ("
                this.tooltipData.data
                ")"
              }}
            >
              {{this.chartData.ipsum}}
            </chart.tooltip>
          {{/if}}
        </SimpleChart>
      </div>
    {{/demo.example}}
    <demo.snippet @name="horz-bar-tooltips.hbs" @label="Template" />
    <demo.snippet @name="large.css" @label="CSS" />
    <demo.snippet @name="chart-data.js" @label="Data Service" />
  </DocsDemo>
</div>
